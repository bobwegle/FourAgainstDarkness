<?xml version="1.0" encoding="utf-8"?>
<Controls:MetroWindow
	x:Class="FourAgainstDarkness.Views.ControlPanel" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="FourAgainstDarkness.Views"
	Height="300"
	Width="300" xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
	BorderThickness="0"
	GlowBrush="Black"
	ResizeMode="CanResizeWithGrip"
	WindowTransitionsEnabled="False"
	WindowStartupLocation="CenterScreen"
	x:Name="metroWindow1">
	<Grid
		Height="NaN"
		Width="NaN">
		<StackPanel
			Grid.Column="0"
			Grid.Row="0"
			Height="NaN"
			HorizontalAlignment="Stretch"
			Width="NaN"
			VerticalAlignment="Stretch"
			Margin="0,0,0,0">
			<Button
				Style="{StaticResource AccentedSquareButtonStyle}"
				Height="NaN"
				IsDefault="False"
				Margin="0,25,0,0"
				Content="Create Party"
				x:Name="CreatePartyButton"
				Click="CreatePartyButton_Click"
				Width="85"
				/>
			<Button
				Style="{StaticResource AccentedSquareButtonStyle}"
				Name="CharSheetButton"
				Content="Open Character Sheet"
				Margin="0,10,0,0"
				HorizontalAlignment="Center"
				Click="CharSheetButton_Click" />
		</StackPanel>
	</Grid>
</Controls:MetroWindow>